---
import Layout from "../layouts/Layout.astro";
import LayoutDefault from "../layouts/LayoutDefault.astro";

const personalInfo = {
	name: "sailor0913",
	title: "菜、爱玩、爱折腾、老年人",
	bio: "热爱生活、热爱折腾",
	quote: "代码如诗，编程如画。",
	skills: ["JavaScript", "Node.js", "Python", "Vue"],
	interests: ["编程", "读书", "运动"],
	experience: [
		{
			company: "科技创新有限公司",
			role: "高级开发工程师",
			period: "2020 - 至今",
			description:
				"负责公司核心产品的架构设计和开发，带领团队完成多个重要项目。",
		},
		{
			company: "互联网科技有限公司",
			role: "前端开发工程师",
			period: "2018 - 2020",
			description: "参与开发大型电商平台，优化用户界面和性能。",
		},
	],
};
---

<div class="flex justify-center max-w-6xl mx-auto">
	<!-- <div class="w-1/4">
		<Layout title={`关于 ${personalInfo.name} - 个人简介`}>

			<nav class="p-4">
				<ul>
					<li><a href="#about" class="text-blue-600 hover:underline">关于我</a></li>
					<li><a href="#skills" class="text-blue-600 hover:underline">技能</a></li>
					<li><a href="#interests" class="text-blue-600 hover:underline">兴趣爱好</a></li>
					<li><a href="#experience" class="text-blue-600 hover:underline">工作经历</a></li>
				</ul>
			</nav>
		</Layout>
	</div> -->
	
	<div class="w-3/4">
		<LayoutDefault>
			<main class="container mx-auto px-4 py-8">
				<section class="text-center mb-12">
					<img class="w-40 h-40 rounded-full mx-auto mb-4 shadow-lg" src="https://via.placeholder.com/160" alt={personalInfo.name}>
					<h1 class="text-4xl font-bold mb-2">{personalInfo.name}</h1>
					<p class="text-xl text-gray-600">{personalInfo.title}</p>
				</section>

				<section id="about" class="mb-12 bg-white rounded-lg shadow-md p-6">
					<h2 class="text-2xl font-semibold mb-4">关于我</h2>
					<p class="text-gray-700 mb-4">{personalInfo.bio}</p>
					<blockquote class="border-l-4 border-blue-500 pl-4 italic text-gray-600">
						"{personalInfo.quote}"
					</blockquote>
				</section>

				<div class="grid md:grid-cols-2 gap-8">
					<section id="skills" class="bg-white rounded-lg shadow-md p-6">
						<h2 class="text-2xl font-semibold mb-4">技能</h2>
						<div class="flex flex-wrap gap-2">
							{personalInfo.skills.map(skill => (
								<span class="bg-blue-100 text-blue-800 rounded-full px-3 py-1 text-sm font-semibold">{skill}</span>
							))}
						</div>
					</section>

					<section id="interests" class="bg-white rounded-lg shadow-md p-6">
						<h2 class="text-2xl font-semibold mb-4">兴趣爱好</h2>
						<ul class="list-disc list-inside text-gray-700">
							{personalInfo.interests.map(interest => (
								<li>{interest}</li>
							))}
						</ul>
					</section>
				</div>

				<!-- <section id="experience" class="mt-12 bg-white rounded-lg shadow-md p-6">
					<h2 class="text-2xl font-semibold mb-4">工作经历</h2>
					<div class="space-y-6">
						{personalInfo.experience.map(job => (
							<div class="border-l-4 border-gray-200 pl-4">
								<h3 class="text-xl font-semibold">{job.role}</h3>
								<p class="text-gray-600">{job.company} | {job.period}</p>
								<p class="text-gray-700 mt-2">{job.description}</p>
							</div>
						))}
					</div>
				</section> -->

				<section id="support" class="mt-12 bg-white rounded-lg shadow-md p-6 text-center">
					<h2 class="text-2xl font-semibold mb-4">支持我的创作 ☕️💖</h2>
					<p class="text-gray-700 mb-6 text-lg">
						如果我的文章帮助到你,可以请我喝杯咖啡哦! 🎉✨
					</p>
					<div class="flex justify-center space-x-8">
						<div class="qr-code">
							<img src="/path/to/wechat-qr.png" alt="微信赞赏码" class="w-40 h-40 mx-auto mb-2 rounded-lg shadow-md">
							<p class="text-sm text-gray-600">微信赞赏码WeChat</p>
						</div>
						<div class="qr-code">
							<img src="/path/to/alipay-qr.png" alt="支付宝收款码" class="w-40 h-40 mx-auto mb-2 rounded-lg shadow-md">
							<p class="text-sm text-gray-600">支付宝收款码 💰Alipay</p>
						</div>
					</div>
					<p class="mt-6 text-sm text-gray-500 italic">您的支持是我持续创作的动力! 🚀</p>
				</section>
			</main>
		</LayoutDefault>
	</div>
</div>